{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/stores/**/*.ts"
  ],
  "exclude": [
    "src/stores/**/*.test.ts",
    "src/stores/**/*.spec.ts"
  ]
}